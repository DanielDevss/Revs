    </div>

</div>

<script>
    let avatarImg = document.querySelector('#avatar__img');
    function selectAvatar(id){
        let rd = document.querySelector(`#avatar${id}`);
        rd.checked = true;
        console.log(rd.value);
        avatarImg.src = `/avatares/${rd.value}`;
        document.querySelector('#modalAvatares').close();
    }
</script>