<%-include('partials/navbar.ejs')%>


<section class="contacto">
    <main class="contacto__container">
        <form action="/send-message" method="post" class="contacto__form">
            <fieldset>
                <legend class="contacto__legend">¿Te interesa contactarnos?</legend>
                
                <div class="contacto__inputs">
                    <label class="contacto__label" id="label__nameUser" for="nameUser">Nombre</label>
                    <input class="contacto__input" type="text" name="nameUser" id="nameUser" placeholder="Escribe tu nombre aquí" value="<%=name%>">
                    <span id="messageErrValidation__name" class="messageErrValidation"></span>
                </div>
                
                <div class="contacto__inputs">
                    <label class="contacto__label" id="label__mail" for="email">Correo eléctronico (opcional)</label>
                    <input class="contacto__input" type="email" name="email" id="email" placeholder="Escribe un correo electronico" value="<%=email%>">
                    <span id="messageErrValidation__mail" class="messageErrValidation"></span>
                </div>
                
                <div class="contacto__inputs">
                    <label class="contacto__label" id="label__message" for="message">Mensaje</label>
                    <textarea class="contacto__input" name="message" id="message" placeholder="Escribe aquí tu mensaje"></textarea>
                    <span id="messageErrValidation__message" class="messageErrValidation"></span>
                </div>
    
                <div class="contacto__inputs">
                    <button id="btnSubmit" type="submit">Enviar Mensaje</button>
                </div>
            
            </fieldset>
    
        </form>
    </main>
    
    
    <section class="contacto__container">
